<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="55dp"
        android:src="@drawable/profile_icon" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableStart="@drawable/ic_person_orange"
                android:text="Name of Person"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_question"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/txtAccountMobile"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mobile_orange"
                android:text="Mobile Number"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_question"
                android:textSize="16sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/txtAccountEmail"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email_orange"
                android:text="Email"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_question"
                android:textSize="16sp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/txtAccountAddress"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_orange"
                android:text="*******"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_question"
                android:padding="5dp"
                android:maxLines="1"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>